@model POSCHAR.Models.Sale

@{
    ViewData["Title"] = "Edit";
}

<h1>Edititar orden de venta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" disabled class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleOrderDate" class="control-label"></label>
                <input asp-for="SaleOrderDate" class="form-control" />
                <span asp-validation-for="SaleOrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleDeliveryDate" class="control-label"></label>
                <input asp-for="SaleDeliveryDate" class="form-control" />
                <span asp-validation-for="SaleDeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stauts" class="control-label"></label>
                <select asp-for="Stauts" class="form-control" asp-items="ViewBag.StatusValue"></select>
                <span asp-validation-for="Stauts" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
